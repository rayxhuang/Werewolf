<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/werewolf_background1"
    tools:context=".Day">

    <TextView
        android:id="@+id/actionLabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:clickable="false"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/p1Card1"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:contentDescription="@string/id1"
        android:duplicateParentState="true"
        android:focusable="true"
        android:src="@drawable/card_back1"
        app:layout_constraintBottom_toTopOf="@+id/p1Card5"
        app:layout_constraintEnd_toStartOf="@+id/p1Card2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionLabel2" />

    <ImageView
        android:id="@+id/p1Card2"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:contentDescription="@string/id2"
        android:focusable="true"
        android:src="@drawable/card_back2"
        app:layout_constraintBottom_toTopOf="@+id/p1Card6"
        app:layout_constraintEnd_toStartOf="@+id/p1Card3"
        app:layout_constraintStart_toEndOf="@+id/p1Card1"
        app:layout_constraintTop_toBottomOf="@+id/actionLabel2" />

    <ImageView
        android:id="@+id/p1Card3"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:contentDescription="@string/id3"
        android:focusable="true"
        android:src="@drawable/card_back3"
        app:layout_constraintBottom_toTopOf="@+id/p1Card7"
        app:layout_constraintEnd_toStartOf="@+id/p1Card4"
        app:layout_constraintStart_toEndOf="@+id/p1Card2"
        app:layout_constraintTop_toBottomOf="@+id/actionLabel2" />

    <ImageView
        android:id="@+id/p1Card4"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:contentDescription="@string/id4"
        android:focusable="true"
        android:src="@drawable/card_back4"
        app:layout_constraintBottom_toTopOf="@+id/p1Card8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/p1Card3"
        app:layout_constraintTop_toBottomOf="@+id/actionLabel2" />

    <ImageView
        android:id="@+id/p1Card5"
        android:contentDescription="@string/id5"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/card_back5"
        app:layout_constraintBottom_toTopOf="@+id/p1Card9"
        app:layout_constraintEnd_toStartOf="@+id/p1Card6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1Card1" />

    <ImageView
        android:id="@+id/p1Card6"
        android:contentDescription="@string/id6"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/card_back6"
        app:layout_constraintBottom_toTopOf="@+id/p1Card10"
        app:layout_constraintEnd_toStartOf="@+id/p1Card7"
        app:layout_constraintStart_toEndOf="@+id/p1Card5"
        app:layout_constraintTop_toBottomOf="@+id/p1Card2" />

    <ImageView
        android:id="@+id/p1Card7"
        android:contentDescription="@string/id7"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/card_back7"
        app:layout_constraintBottom_toTopOf="@+id/p1Card11"
        app:layout_constraintEnd_toStartOf="@+id/p1Card8"
        app:layout_constraintStart_toEndOf="@+id/p1Card6"
        app:layout_constraintTop_toBottomOf="@+id/p1Card3" />

    <ImageView
        android:id="@+id/p1Card8"
        android:contentDescription="@string/id8"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/card_back8"
        app:layout_constraintBottom_toTopOf="@+id/p1Card12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/p1Card7"
        app:layout_constraintTop_toBottomOf="@+id/p1Card4" />

    <ImageView
        android:id="@+id/p1Card9"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:contentDescription="@string/id9"
        android:focusable="true"
        android:src="@drawable/card_back9"
        app:layout_constraintBottom_toTopOf="@+id/confirmButton1"
        app:layout_constraintEnd_toStartOf="@+id/p1Card10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p1Card5" />

    <ImageView
        android:id="@+id/p1Card10"
        android:layout_width="80dp"
        android:layout_height="120dp"
