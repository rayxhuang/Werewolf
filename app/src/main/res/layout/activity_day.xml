        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:contentDescription="@string/id10"
        android:focusable="true"
        android:src="@drawable/card_back10"
        app:layout_constraintBottom_toTopOf="@+id/confirmButton1"
        app:layout_constraintEnd_toStartOf="@+id/p1Card11"
        app:layout_constraintStart_toEndOf="@+id/p1Card9"
        app:layout_constraintTop_toBottomOf="@+id/p1Card6" />

    <ImageView
        android:id="@+id/p1Card11"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:contentDescription="@string/id11"
        android:focusable="true"
        android:src="@drawable/card_back11"
        app:layout_constraintBottom_toTopOf="@+id/confirmButton1"
        app:layout_constraintEnd_toStartOf="@+id/p1Card12"
        app:layout_constraintStart_toEndOf="@+id/p1Card10"
        app:layout_constraintTop_toBottomOf="@+id/p1Card7" />

    <ImageView
        android:id="@+id/p1Card12"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:contentDescription="@string/id12"
        android:focusable="true"
        android:src="@drawable/card_back12"
        app:layout_constraintBottom_toTopOf="@+id/confirmButton1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/p1Card11"
        app:layout_constraintTop_toBottomOf="@+id/p1Card8" />

    <Button
        android:id="@+id/confirmButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:text="@string/confirmButtonLabel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/actionLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actionLabel1" />

</androidx.constraintlayout.widget.ConstraintLayout>